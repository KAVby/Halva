<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.home.halva.MainActivity"
    android:weightSum="2"
    android:screenOrientation="portrait"
    android:orientation="vertical">

    <Button
        android:text="Сохранить"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Save"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickSave"/>

    <Button
        android:text="Отменить"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Cancel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClickCancel" />

    <TextView
        android:text="Сумма покупки:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textSummPok"
        android:layout_below="@+id/textNaChto"
        android:layout_alignEnd="@+id/textRassr"
        android:layout_marginTop="44dp" />

    <TextView
        android:text="Рассрочка, мес"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textRassr"
        android:layout_below="@+id/textNaChto"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:text="На что \nпотратились"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textNaChto"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/textDate"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="РЕД ТЕКУЩИЙ РАСХОД:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RashodT"
        android:layout_centerInParent="false"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Дата:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textDate"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/RashodT"
        android:layout_alignParentStart="true" />

    <EditText
        android:inputType="numberDecimal"
        android:id="@+id/editRassrMes"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:layout_alignTop="@+id/textRassr"
        android:layout_alignStart="@+id/editChto"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtRegWindowBD"
        android:inputType="date"
        android:onClick="onClickDate"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:clickable="false"
        android:layout_above="@+id/textNaChto"
        android:layout_toStartOf="@+id/Cancel" />

    <EditText
        android:inputType="numberDecimal"
        android:id="@+id/editSummPok"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:layout_alignBottom="@+id/textSummPok"
        android:layout_alignStart="@+id/editRassrMes"
        android:layout_alignParentEnd="true" />

    <EditText
        android:inputType="text"
        android:id="@+id/editChto"
        android:text="прод"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editRassrMes"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/Save" />

</RelativeLayout>
