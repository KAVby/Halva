<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:text="назад"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nazad"
        android:onClick="onClickNazad"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_toStartOf="@+id/mes" />

    <Button
        android:text="По месяцам"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mes"
        android:layout_alignParentBottom="true"
        android:onClick="onClickSMes"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/l3" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/l0"
        android:layout_height="wrap_content"
        android:layout_width="30dp"
        android:textStyle="bold"
        android:textSize="10sp"
        android:padding="10dp"
        android:text="ID"
        android:textColor="@android:color/black">

    </TextView>






    <TextView
        android:id="@+id/l1"
        android:layout_height="wrap_content"
        android:layout_width="60dp"
        android:textStyle="bold"
        android:textSize="10sp"
        android:padding="10dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="false"
        android:layout_toRightOf="@+id/l0"
        android:text="Дата \nпокупки"
        android:textColor="@android:color/background_dark">

    </TextView>

    <TextView
        android:layout_width="55dp"
        android:layout_height="wrap_content"

        android:textStyle="bold"
        android:text="сумма"
        android:textSize="10sp"
        android:id="@+id/l3"
        android:padding="10dp"
        android:layout_toRightOf="@+id/l2"
        android:textColor="@android:color/black"
        android:layout_marginLeft="3dp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/l3"
        android:textStyle="bold"
        android:text="рассрочка мес\nвсего/оплачено"
        android:textSize="10sp"
        android:id="@+id/l4"
        android:padding="10dp"
        android:layout_marginLeft="1dp"
        android:textColor="@android:color/black">

    </TextView>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="65dp"
        android:textStyle="bold"
        android:text="что \nкупил"
        android:textSize="10sp"
        android:id="@+id/l2"
        android:padding="10dp"

        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/l1"
        android:textColor="@android:color/black"
        android:layout_marginLeft="5dp">

    </TextView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listVBD"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/l0"
        android:layout_above="@+id/nazad" />
</RelativeLayout>